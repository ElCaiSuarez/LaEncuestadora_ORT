    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>@Html.DisplayFor(model => model.tituloPregunta)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tituloPregunta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tituloPregunta)
        </dd>
        <dt class="col-sm-2">
            <b>Opciones</b>
        </dt>
        <dt class="col-sm-2">
            @*AGREGAR preguntas.count*@
            Opciones
        </dt>
