@model IEnumerable<Encuestadora_Identity2.Models.Encuesta>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    @*<a asp-action="Create">Create New</a>
    <a class="nav-link text-dark" asp-controller="Encuesta" asp-action="Create" asp-page="/Encuesta/Manage/Index" title="Manage">Hola @User.Identity.Name!</a>*@
    <a href="/Encuesta/Create?userName=@User.Identity.Name">Crear Encuesta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tituloEncuesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datetimeCreacionEncuesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datetimeVencimientoEncuesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.puntosEncuesta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tituloEncuesta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datetimeCreacionEncuesta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datetimeVencimientoEncuesta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.puntosEncuesta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EncuestaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EncuestaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EncuestaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
